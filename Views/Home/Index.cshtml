<style>
    body{
        caret-color: transparent;
    }

    /*主題圖文*/
    @@media screen and (max-width: 767px) {
        #tarot-pic {
            order: 2;
        }

        #focus-pic,
        #tarot-pic,
        #shop-pic {
            width: 70%;
            height: 70%;
            margin: auto auto;
        }
    }

    /*下滑滑鼠*/
    .box .mouse {
        position: relative;
        width: 50px;
        height: 85px;
        border: 2px solid #fff;
        border-radius: 50px;
        display: inline-block;
    }

        /* 滑鼠滾輪圓點*/
        .box .mouse::before {
            content: "";
            position: absolute;
            width: 0;
            height: 0;
            border: 6px solid #fff;
            border-radius: 50%;
            top: 20%;
            left: 50%;
            transform: translate(-50%, -50%);
            animation: animationTopDown 2s linear infinite;
        }

        .box .mouse span {
            position: absolute;
            width: 20px;
            height: 20px;
            border-left: 4px solid #fff;
            border-bottom: 4px solid #fff;
            transform: rotate(-45deg) scale(0.7) translate(-50%, -50%);
            margin-top: 30%;
            left: 50%;
            top: calc(var(--i) * 13px);
            animation: animationScrollDown 2s linear infinite;
        }

    @@keyframes animationTopDown {
        0%,
        100% {
            top: 30%;
        }

        50% {
            top: 20%;
        }
    }

    @@keyframes animationScrollDown {
        0% {
            border-left: 4px solid #fff;
            border-bottom: 4px solid #fff;
        }

        100% {
            border-left: 4px solid #333;
            border-bottom: 4px solid #333;
        }
    }

    .box .mouse span:nth-child(2) {
        animation-delay: 0.2s;
    }

    .box .mouse span:nth-child(3) {
        animation-delay: 0.4s;
    }

    h1 {
        font-weight: 800;
    }

</style>

